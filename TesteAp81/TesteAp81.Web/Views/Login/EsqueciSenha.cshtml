@model TesteAp81.Web.Models.LoginClienteViewModel

@{
    ViewBag.Title = "Ap81 - Esqueci a Senha";
    Layout = "~/Views/Shared/_Login.cshtml";
}
@using (Html.BeginForm("EsqueciSenha", "Login", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal animated jello">
        <h2 class="form-signin-heading">Esqueci a senha</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control", placeholder = "Digite seu email"}})
            </div>
            <div class="col-md-12">@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
        </div>

        <div class="form-group">
            @if (!string.IsNullOrEmpty(Model.Mensagem))
            {
                <label class="text-danger">
                    @Model.Mensagem
                </label>
            }
        </div>
        <div class="form-group">
            <div class="col-md-7">
                <input type="submit" value="Enviar Senha" class="btn btn-lg btn-primary btn-block"/>
            </div>
            <div class="col-md-5">
                @Html.ActionLink("Voltar", "Index", "Login", new { @class = "btn btn-lg btn-success btn-block" })
            </div>
        </div>
    </div>
}

